{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please see https://stryker-mutator.io for more information.",

  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json",
    "dashboard"
  ],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.d.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.type.ts",
    "!src/index.ts"
  ],
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 70
  },
  "mutator": {
    "plugins": [
      "@stryker-mutator/typescript-checker"
    ],
    "excludedMutations": []
  },
  "checkers": [
    "typescript"
  ],
  "tsconfigFile": "tsconfig.json",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js",
    "enableFindRelatedTests": true
  },
  "timeoutMS": 60000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 4,
  "symlinkNodeModules": false,
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "htmlReporter": {
    "fileName": "reports/mutation/index.html"
  },
  "jsonReporter": {
    "fileName": "reports/mutation/mutation.json"
  },
  "dashboard": {
    "project": "github.com/your-org/your-repo",
    "version": "main",
    "module": "your-module",
    "baseUrl": "https://dashboard.stryker-mutator.io/api/reports",
    "reportType": "full"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".stryker-tmp",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "warnings": {
    "unknownOptions": true,
    "preprocessorErrors": true,
    "slow": true
  },
  "plugins": [
    "@stryker-mutator/jest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "logLevel": "info",
  "fileLogLevel": "info",
  "allowConsoleColors": true,
  "disableTypeChecks": "{test,src,lib}/**/*.{js,ts,jsx,tsx,html,vue}"
}
